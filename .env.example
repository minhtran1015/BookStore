# BookStore Application Environment Variables Template
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit the .env file to version control!

# Docker Hub Configuration
DOCKERHUB_USERNAME=your_dockerhub_username
DOCKERHUB_TOKEN=your_dockerhub_token
DOCKER_HUB_PREFIX=your_dockerhub_username  # Same as DOCKERHUB_USERNAME

# GitHub Configuration
# Create a Personal Access Token at: https://github.com/settings/tokens
# Required permissions: repo, workflow
GH_TOKEN=your_github_personal_access_token

# Git Configuration
GIT_SHA_TAG=latest

# Build Configuration
BUILD_MODE=docker-hub

# Kubernetes Configuration
KUBERNETES_NAMESPACE=bookstore
KUBERNETES_CONTEXT=kind-bookstore-cluster

# Database Configuration (for local development)
MYSQL_DATABASE=bookstore_db
MYSQL_USER=bookstoreDBA
MYSQL_PASSWORD=PaSSworD
MYSQL_ROOT_PASSWORD=r00tPaSSworD

# Application Ports (for reference)
ACCOUNT_SERVICE_PORT=4001
CATALOG_SERVICE_PORT=6001
ORDER_SERVICE_PORT=7001
BILLING_SERVICE_PORT=5001
PAYMENT_SERVICE_PORT=8001
API_GATEWAY_PORT=8765
EUREKA_PORT=8761
CONSUL_PORT=8500
ZIPKIN_PORT=9411
PROMETHEUS_PORT=9090
GRAFANA_PORT=3030
INFLUXDB_PORT=8086
CHRONOGRAF_PORT=8888
KAPACITOR_PORT=9092
FRONTEND_PORT=80

# Monitoring and Tracing
ZIPKIN_HOST=bookstore-zipkin:9411
SPRING_PROFILES_ACTIVE=docker

# Stripe API Key for Payment Service
# Get this from your Stripe dashboard (https://dashboard.stripe.com/apikeys)
# Use test keys for development: sk_test_...
# Use live keys for production: sk_live_...
STRIPE_API_KEY=your_stripe_api_key

# AI Chat Service API Key (optional)
# Get this from TogetherAI or your preferred AI service
REACT_APP_TOGETHER_API_KEY=your_togetherai_api_key

# Gemini API Key (use this instead of TogetherAI API)
REACT_APP_GEMINI_API_KEY=your_gemini_api_key