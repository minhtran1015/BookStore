# BookStore Environment Configuration
# Copy this to .env and update with your values

# === Google Cloud Platform ===
GCP_PROJECT_ID=your_gcp_project_id
CLUSTER_NAME=bookstore-cluster
GCP_ZONE=us-central1-a
GCP_REGION=us-central1
NUM_NODES=2
MACHINE_TYPE=e2-medium

# === Domain ===
DOMAIN_NAME=bookscar.store
DOMAIN_EMAIL=admin@bookscar.store

# === Container Registry ===
CONTAINER_REGISTRY=gcr.io

# === Docker Hub ===
DOCKERHUB_USERNAME=your_dockerhub_username
DOCKERHUB_TOKEN=your_dockerhub_token
DOCKER_HUB_PREFIX=your_dockerhub_username

# === GitHub ===
GH_TOKEN=your_github_token

# === Build ===
GIT_SHA_TAG=latest
BUILD_MODE=docker-hub

# === Kubernetes ===
KUBERNETES_NAMESPACE=bookstore
KUBERNETES_CONTEXT=kind-bookstore-cluster

# === Database ===
MYSQL_DATABASE=bookstore_db
MYSQL_USER=bookstoreDBA
MYSQL_PASSWORD=PaSSworD
MYSQL_ROOT_PASSWORD=r00tPaSSworD

# === Service Ports ===
ACCOUNT_SERVICE_PORT=4001
CATALOG_SERVICE_PORT=6001
ORDER_SERVICE_PORT=7001
BILLING_SERVICE_PORT=5001
